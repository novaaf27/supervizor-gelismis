const Discord = require('discord.js');
const db = require('quick.db')
exports.run = (client, message, args) => { 
  

let kelime = args[0]
let metin = args.slice(1).join(" ");
  
 let hata1 = new Discord.RichEmbed()
 .setColor('RED')
 .setDescription('Aranacak kelimeyi belirtmelisin. <a:iptal:626445972620443648>')
 
  let hata2 = new Discord.RichEmbed()
 .setColor('RED')
 .setDescription(kelime + ' nin aranacağı metini belirtmelisin. <a:iptal:626445972620443648>')
  
  let hata3 = new Discord.RichEmbed()
 .setColor('RED')
 .setDescription('kelimenin aranacağı metin en az 10 karakter uzunluğunda olmalı. <a:iptal:626445972620443648>')
  
  
   if(!kelime) return message.channel.send(hata1)
   if(!metin) return message.channel.send(hata2)
   if(metin.length < 10) return message.channel.send(hata3)


    var sonuc =  metin.replace(kelime, '**' + kelime +'**')
   
     let sonucs = new Discord.RichEmbed()
     .setTitle('metinde bulunan '+kelime+' Aşağıda işaretlendi!')
     .setDescription(sonuc)
     .setFooter('Made By Yasin..')
     .setColor('GREEN')
     message.channel.send(sonucs)

};
exports.conf = {
  enabled: true,  
  guildOnly: false, 
  aliases: [], 
  permLevel: 4
};

exports.help = {
  name: 'kelime-ara',
  description: 'taslak', 
  usage: 'kelime-ara'
};
